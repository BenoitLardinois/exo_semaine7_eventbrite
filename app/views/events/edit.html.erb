<br><br><br><br>
<h1>Editer son évènement</h1>
<br><br>
<%= form_for @event do |f| %>
  <div class="form-group">
    <label><strong>Description:</strong></label>
    <%= f.text_area :description, class: 'from-control' %>
  </div>
  <div class="form-group">
    <label><strong>Lieux:</strong></label>
    <%= f.text_field :location, class: 'from-control' %>
  </div>  
  <div class="form-group">
    <label><strong>Prix:</strong></label>
    <%= f.text_field :price, class: 'from-control' %>
  </div>
  <br>
  <div class="form-group">
    <button type="submit" class="btn btn-primary">Modifier l'évènement</button>
  </div>
<% end %>